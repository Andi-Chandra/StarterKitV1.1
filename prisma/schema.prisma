generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id
  email        String    @unique
  name         String?
  avatarUrl    String?   @map("avatar_url")
  role         String    @default("USER") @db.Text
  createdAt    DateTime  @default(now())   @map("created_at")
  updatedAt    DateTime  @updatedAt        @map("updated_at")
  lastSignInAt DateTime? @map("last_sign_in_at")
  
  // Relations
  createdMedia MediaItem[]
  updatedConfig SiteConfig[]
  
  @@map("users")
}

model MediaCategory {
  id          String   @id
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")
  
  // Relations
  mediaItems MediaItem[]
  
  @@map("media_categories")
}

model MediaItem {
  id          String     @id
  title       String
  description String?
  fileUrl     String     @map("file_url")
  fileType    String     @db.Text @map("file_type")
  fileSize    Int?       @map("file_size")
  dimensions  String?    // JSON string for {width: number, height: number}
  isFeatured  Boolean    @default(false)  @map("is_featured")
  sortOrder   Int        @default(0)      @map("sort_order")
  createdAt   DateTime   @default(now())  @map("created_at")
  updatedAt   DateTime   @updatedAt       @map("updated_at")
  
  // Foreign Keys
  categoryId String? @map("category_id")
  createdBy  String? @map("created_by")
  
  // Relations
  category    MediaCategory? @relation(fields: [categoryId], references: [id])
  creator     User?          @relation(fields: [createdBy], references: [id])
  sliderItems SliderItem[]
  
  @@map("media_items")
}

model Slider {
  id                String     @id
  name              String
  type              String     @db.Text
  isActive          Boolean    @default(true)     @map("is_active")
  autoPlay          Boolean    @default(true)     @map("auto_play")
  autoPlayInterval  Int        @default(5000)     @map("auto_play_interval") // milliseconds
  loop              Boolean    @default(true)
  createdAt         DateTime   @default(now())    @map("created_at")
  updatedAt         DateTime   @updatedAt         @map("updated_at")
  
  // Relations
  items SliderItem[]
  
  @@map("sliders")
}

model SliderItem {
  id               String   @id
  title            String?
  subtitle         String?
  callToAction     String?  @map("call_to_action")
  callToActionUrl  String?  @map("call_to_action_url")
  sortOrder        Int      @default(0)      @map("sort_order")
  createdAt        DateTime @default(now())  @map("created_at")
  
  // Foreign Keys
  sliderId String @map("slider_id")
  mediaId  String @map("media_id")
  
  // Relations
  slider Slider @relation(fields: [sliderId], references: [id], onDelete: Cascade)
  media  MediaItem @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  
  @@map("slider_items")
}

model SiteConfig {
  id          String   @id
  key         String   @unique
  value       String   // JSON string
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Foreign Keys
  updatedBy String? @map("updated_by")
  
  // Relations
  updater User? @relation(fields: [updatedBy], references: [id])
  
  @@map("site_config")
}

model NavigationLink {
  id         String   @id
  title      String
  url        String
  isExternal Boolean  @default(false) @map("is_external")
  sortOrder  Int      @default(0)     @map("sort_order")
  isActive   Boolean  @default(true)  @map("is_active")
  parentId   String?  @map("parent_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt      @map("updated_at")
  
  // Self-referencing relation for nested navigation
  parent   NavigationLink?  @relation("NavigationHierarchy", fields: [parentId], references: [id])
  children NavigationLink[] @relation("NavigationHierarchy")
  
  @@map("navigation_links")
}

model SocialMediaLink {
  id        String   @id
  platform  String
  url       String
  iconName  String   @map("icon_name")  // Lucide icon name
  isActive  Boolean  @default(true)      @map("is_active")
  sortOrder Int      @default(0)         @map("sort_order")
  createdAt DateTime @default(now())     @map("created_at")
  updatedAt DateTime @updatedAt          @map("updated_at")
  
  @@map("social_media_links")
}
